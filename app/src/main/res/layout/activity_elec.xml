<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chen.ls4000.activity.ElecActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_headofpage"
        android:id="@+id/id_elec_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电机位置调整"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            style="@style/titlefont" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:id="@+id/id_elec_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77.3dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_elec_title"
        android:id="@+id/id_elec_layout1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码位置"
            style="@style/settingstextfont"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_elec_scan"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            style="@style/settingsinfofont"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#d8ddea"
        android:layout_below="@id/id_elec_layout1"
        android:id="@+id/id_elec_line1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77.3dp"
        android:layout_below="@id/id_elec_line1"
        android:id="@+id/id_elec_layout2"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测位置"
            style="@style/settingstextfont"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_elec_test"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@null"
            style="@style/settingsinfofont"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#d8ddea"
        android:layout_below="@id/id_elec_layout2"
        android:id="@+id/id_elec_line2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77.3dp"
        android:layout_below="@id/id_elec_line2"
        android:id="@+id/id_elec_layout3"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电机速度"
            style="@style/settingstextfont"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_elec_speed"
            style="@style/settingsinfofont"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@null"/>
    </RelativeLayout>
    <Button
        android:layout_width="440dp"
        android:layout_height="64dp"
        android:text="@string/string113"
        android:id="@+id/id_elec_save"
        android:textAllCaps="false"
        android:layout_margin="20dp"
        android:background="@drawable/settingsbigbtn_shape_corner"
        android:layout_below="@id/id_elec_layout3"/>
</RelativeLayout>
