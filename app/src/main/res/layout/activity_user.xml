<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chen.ls4000.activity.UserActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_headofpage"
        android:id="@+id/id_user_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string181"
            style="@style/titlefont"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:id="@+id/id_user_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67.3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_user_title"
        android:id="@+id/id_user_hoslayout"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string73"
            android:layout_centerVertical="true"
            style="@style/settingstextfont"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:id="@+id/id_user_hostext"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_user_hos"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            style="@style/settingsinfofont"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:hint="@string/string182"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLength="15"
            android:gravity="right"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#d8ddea"
        android:id="@+id/id_user_line1"
        android:layout_below="@id/id_user_hoslayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67.3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_user_line1"
        android:id="@+id/id_user_departlayout"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string74"
            android:layout_centerVertical="true"
            style="@style/settingstextfont"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView2"
            />
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_user_depart"
            style="@style/settingsinfofont"
            android:layout_marginRight="22dp"
            android:hint="@string/string183"
            android:background="@null"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="22dp"
            android:maxLength="10"
            android:singleLine="true"
            android:gravity="right"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#d8ddea"
        android:layout_below="@id/id_user_departlayout"
        android:id="@+id/id_user_line2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67.3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_user_line2"
        android:id="@+id/id_user_doclayout1"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string119"
            style="@style/settingstextfont"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_user_doc1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:hint="@string/string283"
            style="@style/settingsinfofont"
            android:background="@null"
            android:maxLength="12"
            android:singleLine="true"
            android:gravity="right"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#d8ddea"
        android:layout_below="@id/id_user_doclayout1"
        android:id="@+id/id_user_line3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67.3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_user_line3"
        android:id="@+id/id_user_doclayou2"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string119"
            style="@style/settingstextfont"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_user_doc2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:hint="@string/string283"
            style="@style/settingsinfofont"
            android:background="@null"
            android:maxLength="12"
            android:singleLine="true"
            android:gravity="right"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#d8ddea"
        android:layout_below="@id/id_user_doclayou2"
        android:id="@+id/id_user_line4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67.3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_user_line4"
        android:id="@+id/id_user_doclayout3"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string119"
            style="@style/settingstextfont"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_user_doc3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:hint="@string/string283"
            style="@style/settingsinfofont"
            android:background="@null"
            android:maxLength="12"
            android:singleLine="true"
            android:gravity="right"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#d8ddea"
        android:id="@+id/id_user_line5"
        android:layout_below="@id/id_user_doclayout3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67.3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_user_line5"
        android:id="@+id/id_user_audlayout1"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string282"
            style="@style/settingstextfont"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_user_aud1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:hint="@string/string266"
            style="@style/settingsinfofont"
            android:background="@null"
            android:maxLength="12"
            android:singleLine="true"
            android:gravity="right"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#d8ddea"
        android:id="@+id/id_user_line6"
        android:layout_below="@id/id_user_audlayout1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67.3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_user_line6"
        android:id="@+id/id_user_audlayout2"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string282"
            style="@style/settingstextfont"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_user_aud2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:hint="@string/string266"
            style="@style/settingsinfofont"
            android:background="@null"
            android:maxLength="12"
            android:singleLine="true"
            android:gravity="right"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d8ddea"
        android:id="@+id/id_user_line7"
        android:layout_below="@id/id_user_audlayout2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67.3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_user_line7"
        android:id="@+id/id_user_typelayout"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string122"
            style="@style/settingstextfont"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@null"
            android:text=""
            style="@style/addsamfont"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/id_user_type"
            android:gravity="center_vertical|right" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_user_typelayout"
        android:gravity="center"
        android:layout_margin="20dp">
        <Button
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:text="@string/string113"
            android:background="@drawable/addsamcontinue_shape_corner"
            android:id="@+id/id_user_save"
            style="@style/whitefont"/>
    </LinearLayout>
</RelativeLayout>
