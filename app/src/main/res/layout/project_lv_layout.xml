<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="293.3dp"
        android:layout_height="53.3dp"
        android:background="@drawable/samtype_shape_corner"
        android:layout_gravity="center"
        android:id="@+id/id_protip_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="26dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PCT"
            style="@style/samtypechoosefont"
            android:layout_centerInParent="true"
            android:id="@+id/id_protip_text"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_selected_white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13.3dp"
            android:id="@+id/id_protip_choose"/>
    </RelativeLayout>

</RelativeLayout>
