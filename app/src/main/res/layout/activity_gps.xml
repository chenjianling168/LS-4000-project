<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa"
    tools:context="com.example.chen.ls4000.activity.GPSActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_headofpage"
        android:id="@+id/id_gps_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string205"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            style="@style/titlefont"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:id="@+id/id_gps_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77.3dp"
        android:background="#fff"
        android:layout_below="@id/id_gps_title"
        android:id="@+id/id_gps_switchlayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS"
            style="@style/settingstextfont"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/bigcirclebtn_style"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:id="@+id/id_gps_switch"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@id/id_gps_switchlayout"
        android:id="@+id/id_gps_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/id_gps_location"
            android:scrollbars="vertical"
            android:textSize="18sp"
            android:singleLine="false"
            android:layout_below="@+id/id_gps_line"
            android:layout_margin="20dp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/string48"
            android:layout_below="@+id/id_gps_location"
            android:id="@+id/id_gps_save"
            android:textAllCaps="false"
            android:background="@drawable/settingsbigbtn_shape_corner"
            style="@style/whitefont" />


</RelativeLayout>
