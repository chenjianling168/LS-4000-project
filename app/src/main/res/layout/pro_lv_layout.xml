<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/id_promana_head"
        android:id="@+id/id_promana_lvhead"
        android:background="#fff"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/gender_checkbox_style"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:id="@+id/id_prolv_choose"/>
        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="项目"
            android:textSize="18.7sp"
            android:textColor="#242a33"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/id_prolv_pro"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="批次号"
            android:textSize="18.7sp"
            android:textColor="#242a33"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/id_prolv_batch"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="生产日期"
            android:textSize="18.7sp"
            android:textColor="#242a33"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/id_prolv_borntime"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="保质期"
            android:textSize="18.7sp"
            android:textColor="#242a33"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/id_prolv_shelflife"/>
    </LinearLayout>

</LinearLayout>
