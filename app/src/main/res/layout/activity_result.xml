<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_testingpage"
    tools:context="com.example.chen.ls4000.activity.ResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/id_result_title"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string161"
            style="@style/titlefont"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/id_result_back"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_testingresult_large"
        android:layout_below="@id/id_result_title"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="#6093e6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:text="宋佳"
            android:id="@+id/id_result_name"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/id_result_name"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/id_result_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                style="@style/settingslittlefont"
                android:id="@+id/id_result_gender"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                style="@style/settingslittlefont"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                style="@style/settingslittlefont"
                android:layout_centerHorizontal="true"
                android:id="@+id/id_result_age" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string162"
                style="@style/settingslittlefont"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/id_result_layout"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:id="@+id/id_result_layout1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string77"
                style="@style/resulttextfont" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YB00001"
                style="@style/resultinfofont"
                android:id="@+id/id_result_samnum"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/id_result_layout"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="200dp"
            android:id="@+id/id_result_layout2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string163"
                style="@style/resulttextfont" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/resultinfofont"
                android:id="@+id/id_result_samtype"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_below="@id/id_result_layout1"
            android:id="@+id/id_result_layout3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:id="@+id/id_result_liear1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/string121"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/string334"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string335"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string149"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_below="@+id/id_result_liear1"
                android:background="#000000"/>


            <LinearLayout
                android:gravity="center"
                android:layout_below="@+id/id_result_liear1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/resulttextfont"
                        android:id="@+id/id_result_proname1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/resulttextfont"
                        android:id="@+id/id_result_proname2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/resulttextfont"
                        android:id="@+id/id_result_proname3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/id_result_layout15"
                    android:layout_toEndOf="@+id/id_result_layout2"
                    android:layout_toRightOf="@+id/id_result_layout2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_result_concen1"
                        style="@style/resulttextfont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:id="@+id/id_result_concen2"
                        style="@style/resulttextfont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:id="@+id/id_result_concen3"
                        style="@style/resulttextfont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/resulttextfont"
                        android:id="@+id/id_result1_unit1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/resulttextfont"
                        android:id="@+id/id_result1_unit2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/resulttextfont"
                        android:id="@+id/id_result1_unit3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/resulttextfont"
                        android:id="@+id/id_result_resultinfofont1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/resulttextfont"
                        android:id="@+id/id_result_resultinfofont2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/resulttextfont"
                        android:id="@+id/id_result_resultinfofont3"/>

                </LinearLayout>



            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted_line"
            android:layout_below="@id/id_result_layout3"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/id_result_line1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_result_line1"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="45dp"
            android:id="@+id/id_result_layout7">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/resulttextfont"
                android:text="@string/string167"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/id_result_testperson"
                style="@style/resultinfofont" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_result_layout7"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:id="@+id/id_result_layout15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/resulttextfont"
                android:text="@string/string267"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/id_result_audperson"
                style="@style/resultinfofont" />


            </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_result_layout15"
            android:id="@+id/id_result_layout8"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string168"
                style="@style/resulttextfont"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18.02.03"
                style="@style/resultinfofont"
                android:id="@+id/id_result_time"/>
        </LinearLayout>
        <ImageView
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted_line"
            android:layout_below="@id/id_result_layout8"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/id_result_line2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_result_line2"
            android:id="@+id/id_result_layout9"
            android:layout_marginLeft="45dp">

            <TextView
                android:id="@+id/textView"
                style="@style/resulttextlfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string169" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C:1250 / T:660"
                android:id="@+id/id_result_referlocation"
                style="@style/resultinfolfont"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_result_layout9"
            android:id="@+id/id_result_layout10"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string170"
                style="@style/resulttextfont"/>
            <TextView
                android:id="@+id/tv_realLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/resultinfofont"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/curveChart1"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:layout_below="@id/id_result_layout10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/color13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平均值"
                    android:textColor="@color/color2"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/color14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最小值"
                    android:textColor="@color/color2"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/color25" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最大值"
                    android:textColor="@color/color2"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_layout_customCurveChart"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.example.chen.ls4000.utils.CurveChart
                android:id="@+id/id_result_customCurveChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp" />

            </LinearLayout>




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:elevation="10dp"
        android:id="@+id/id_query_layout4">
        <Button
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:text="@string/string133"
            android:gravity="center_horizontal"
            android:textAllCaps="false"
            android:id="@+id/id_result_print"
            android:drawableTop="@mipmap/ic_print"
            android:background="#fff"
            style="@style/queryheadfont"
            android:paddingTop="16.6dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:text="@string/string157"
            android:gravity="center_horizontal"
            android:textAllCaps="false"
            android:id="@+id/id_result_upload"
            android:drawableTop="@mipmap/ic_upload"
            android:background="#fff"
            style="@style/queryheadfont"
            android:paddingTop="16.6dp"/>
    </LinearLayout>
</RelativeLayout>
