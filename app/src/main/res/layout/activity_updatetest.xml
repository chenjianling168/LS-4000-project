<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_testingpage"
    tools:context="com.example.chen.ls4000.activity.AddTestActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/id_updatetest_title">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/id_updatetest_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string180"
            style="@style/titlefont"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33.3dp"
        android:background="#fae99d"
        android:layout_below="@id/id_updatetest_title"
        android:id="@+id/id_updatetest_tip"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_close_little"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/id_updatetest_tipclose"/>
        <TextView
            android:layout_width="446.7dp"
            android:layout_height="wrap_content"
            android:text="@string/string112"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/id_updatetest_btnlayout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp">
        <Button
            android:layout_width="213.3dp"
            android:layout_height="wrap_content"
            android:text="@string/string113"
            android:padding="15sp"
            android:textAllCaps="false"
            style="@style/whitefont"
            android:layout_centerHorizontal="true"
            android:id="@+id/id_updatetest_save"
            android:background="@drawable/addsamsave_shape_corner"/>
        <Button
            android:layout_width="213.3dp"
            android:layout_height="wrap_content"
            android:text="@string/string114"
            android:textAllCaps="false"
            android:padding="15sp"
            style="@style/whitefont"
            android:visibility="gone"
            android:id="@+id/id_updatetest_addcon"
            android:layout_marginLeft="13.3dp"
            android:background="@drawable/addsamcontinue_shape_corner"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/id_updatetest_tip"
        android:layout_above="@id/id_updatetest_btnlayout"
        android:layout_marginTop="6.7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/addsam_shape_corner">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string115"
                style="@style/addsamtextfont"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                style="@style/addsamfont"
                android:digits="1234567890X"
                android:maxLength="18"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/id_updatetest_idnum"
                android:gravity="center_vertical|right"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#dbddea"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string116"
                style="@style/addsamtextfont"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true"
                android:id="@+id/textView3" />
            <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:textSize="17dp"
                android:singleLine="true"
                android:maxLength="12"
                style="@style/addsamfont"
                android:layout_marginRight="18dp"
                android:id="@+id/id_updatetest_name"
                android:gravity="center_vertical|right"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp" />
        </RelativeLayout>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#dbddea"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string117"
                style="@style/addsamtextfont"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true" />
            <EditText
                android:inputType="text"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:digits="0123456789"
                android:maxLength="3"
                android:singleLine="true"
                android:maxLines="1"
                style="@style/addsamfont"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/id_updatetest_age"
                android:gravity="center_vertical|right"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#dbddea"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string118"
                style="@style/addsamtextfont"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/id_updatetest_rg">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string3"
                    style="@style/addsamfont"
                    android:button="@null"
                    android:drawableLeft="@drawable/radiobtn_style"
                    android:drawablePadding="13.3dp"
                    android:id="@+id/id_updatetest_male"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string4"
                    style="@style/addsamfont"
                    android:drawablePadding="13.3dp"
                    android:background="@null"
                    android:button="@null"
                    android:drawableLeft="@drawable/radiobtn_style"
                    android:layout_marginLeft="53.3dp"
                    android:id="@+id/id_updatetest_female"/>
            </RadioGroup>
        </RelativeLayout>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#dbddea"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string119"
                style="@style/addsamtextfont"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true" />
            <Spinner
                android:layout_width="310dp"
                android:layout_height="60dp"
                android:text=""
                android:singleLine="true"
                style="@style/addsamfont"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/id_updatetest_testPerson"
                android:gravity="center_vertical|right"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#dbddea"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string282"
                style="@style/addsamtextfont"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true" />
            <Spinner
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:text=""
                android:maxLength="10"
                android:singleLine="true"
                style="@style/addsamfont"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/id_updatetest_audPerson"
                android:gravity="center_vertical|right"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#dbddea"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string120"
                style="@style/addsamtextfont"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:maxLength="12"
                android:digits="0123456789qwertyuiopasdfghjklzxcvbnm"
                style="@style/addsamfont"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/id_updatetest_samnum"
                android:gravity="center_vertical|right"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#dbddea"
            android:layout_marginLeft="20dp"/>

        <RelativeLayout
            android:id="@+id/id_updatetest_pro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                style="@style/addsamtextfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:text="@string/string121" />

            <ImageView
                android:id="@+id/id_updatetest_progoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_goto"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/id_updatetest_proname"
                style="@style/addsamfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/id_updatetest_progoto"
                android:background="@null"
                android:gravity="center_vertical|right" />
        </RelativeLayout>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#dbddea"
            android:layout_marginLeft="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/id_updatetest_type">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string122"
                style="@style/addsamtextfont"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_goto"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/id_updatetest_typegoto"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                style="@style/addsamfont"
                android:layout_toLeftOf="@id/id_updatetest_typegoto"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:id="@+id/id_updatetest_samtype"
                android:gravity="center_vertical|right"/>
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>
