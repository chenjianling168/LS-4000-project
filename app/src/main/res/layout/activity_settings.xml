<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chen.ls4000.activity.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_headofpage"
        android:id="@+id/id_settings_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string171"
            style="@style/titlefont"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/id_settings_back"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_settings_title"
        android:background="#f5f7fa">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77.3dp"
                android:background="#fff"
                android:id="@+id/id_settings_userlayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string172"
                    style="@style/settingsfont"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    android:id="@+id/id_settings_user"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d8ddea"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d8ddea"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77.3dp"
                android:background="#fff"
                android:id="@+id/id_settings_wifilayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WIFI"
                    style="@style/settingsfont"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/textView4" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    android:id="@+id/id_settings_wifi"/>

                <RelativeLayout
                    android:id="@+id/id_settings_printlayout"
                    android:layout_width="match_parent"
                    android:layout_height="77.3dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/textView4"
                    android:background="#fff">

                    <TextView
                        style="@style/settingsfont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="@string/string133" />

                    <ImageView
                        android:id="@+id/id_settings_print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_goto" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d8ddea"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77.3dp"
                android:background="#fff"
                android:id="@+id/id_settings_bluetoothlayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
