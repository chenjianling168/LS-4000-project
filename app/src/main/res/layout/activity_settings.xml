                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    android:id="@+id/id_settings_instrqual"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d8ddea"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77.3dp"
                android:background="#fff"
                android:id="@+id/id_settings_instrumentlayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string105"
                    style="@style/settingsfont"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    android:id="@+id/id_settings_instrment"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d8ddea"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77.3dp"
                android:background="#fff"
                android:id="@+id/id_settings_reagentquallayout"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string175"
                    style="@style/settingsfont"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    android:id="@+id/id_settings_reagentqual"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77.3dp"
                android:background="#fff"
                android:id="@+id/id_settings_modifylayout"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号密码修改"
                    style="@style/settingsfont"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d8ddea"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77.3dp"
                android:background="#fff"
                android:layout_marginBottom="40dp"
                android:id="@+id/id_settings_engineerlayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string137"
                    style="@style/settingsfont"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    android:id="@+id/id_settings_engineer"/>
            </RelativeLayout>



        </LinearLayout>

    </ScrollView>
</RelativeLayout>
