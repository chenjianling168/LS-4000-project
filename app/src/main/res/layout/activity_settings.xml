                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    android:id="@+id/id_settings_bluetooth"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d8ddea"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77.3dp"
                android:background="#fff"
                android:id="@+id/id_settings_gpslayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS"
                    style="@style/settingsfont"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    android:id="@+id/id_settings_gps"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d8ddea"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77.3dp"
                android:background="#fff"
                android:id="@+id/id_settings_languagelayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string173"
                    style="@style/settingsfont"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    android:id="@+id/id_settings_language"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d8ddea"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77.3dp"
                android:background="#fff"
                android:id="@+id/id_settings_timelayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string174"
                    style="@style/settingsfont"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_goto"
                    android:id="@+id/id_settings_time"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d8ddea"/>

