<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.chen.ls4000.activity.AgeingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_headofpage"
        android:id="@+id/id_ageing_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string123"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            style="@style/titlefont" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:id="@+id/id_ageing_back"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_ageing_img"
        android:src="@mipmap/img_agingtest"
        android:layout_below="@id/id_ageing_title"
        android:layout_marginTop="70.7dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入老化次数"
        style="@style/addsamfont"
        android:layout_below="@id/id_ageing_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53.3dp"
        android:id="@+id/id_ageing_tip"
        android:visibility="gone"/>

    <EditText
        android:layout_width="440dp"
        android:layout_height="64dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/id_ageing_et"
        android:background="@drawable/settingsbigageinget_shape_corner"
        android:layout_below="@id/id_ageing_tip"
        android:layout_marginTop="40dp"
        android:visibility="gone"/>
    
    <Button
        android:layout_width="440dp"
        android:layout_height="64dp"
        android:id="@+id/id_ageing_starttest"
        android:background="@drawable/settingsbigbtn_shape_corner"
        android:layout_below="@id/id_ageing_et"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAllCaps="false"
        android:text="@string/string12"
        style="@style/settingsageingfont"/>

</RelativeLayout>
