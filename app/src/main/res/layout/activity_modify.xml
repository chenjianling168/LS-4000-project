<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_headofpage"
        android:id="@+id/id_modify_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码修改"
            style="@style/titlefont"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:id="@+id/id_modify_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_modify_title"
        android:background="#f5f7fa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/id_modify_admin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通用号修改："
                    android:layout_marginTop="15dp"
                    style="@style/settingstextfont"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eee"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/id_conmana_pretitle"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原账号："
                        android:layout_marginTop="5dp"
                        style="@style/settingstextfont"/>

                    <EditText
                        android:id="@+id/id_modify_admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxLength="12"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        style="@style/settingstextfont"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原密码："
                        android:layout_marginTop="5dp"
                        style="@style/settingstextfont"/>

                    <EditText
                        android:id="@+id/id_modify_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:inputType="textPassword"
                        android:digits="@string/page"
                        android:maxLength="12"
                        style="@style/settingstextfont"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新账号："
                        android:layout_marginTop="5dp"
                        style="@style/settingstextfont"/>

                    <EditText
                        android:id="@+id/id_modify_newadmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        style="@style/settingstextfont"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新密码："
                        android:layout_marginTop="5dp"
                        style="@style/settingstextfont"/>

                    <EditText
                        android:id="@+id/id_modify_newpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:inputType="textPassword"
                        android:digits="@string/page"
                        android:maxLength="12"
                        style="@style/settingstextfont"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认密码："
                        android:layout_marginTop="5dp"
                        style="@style/settingstextfont"/>

                    <EditText
                        android:id="@+id/id_modify_confirmadmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:inputType="textPassword"
                        android:digits="@string/page"
                        android:maxLength="12"
                        style="@style/settingstextfont"/>

                </LinearLayout>


                <Button
                    android:id="@+id/id_modify_adminsave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:text="保存"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/id_modify_vipadmin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIP用号修改："
                    android:layout_marginTop="15dp"
                    style="@style/settingstextfont"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eee"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/id_conmana_pretitle"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原账号："
                        android:layout_marginTop="5dp"
                        style="@style/settingstextfont"/>

                    <EditText
                        android:id="@+id/id_modify_vipadmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:enabled="false"
                        style="@style/settingstextfont"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原密码："
                        android:layout_marginTop="5dp"
                        style="@style/settingstextfont"/>

                    <EditText
                        android:id="@+id/id_modify_vippassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:inputType="textPassword"
                        android:digits="@string/page"
                        android:maxLength="12"
                        style="@style/settingstextfont"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新密码："
                        android:layout_marginTop="5dp"
                        style="@style/settingstextfont"/>

                    <EditText
                        android:id="@+id/id_modify_new_vippassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:inputType="textPassword"
                        android:digits="@string/page"
                        android:maxLength="12"
                        style="@style/settingstextfont"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认密码："
                        android:layout_marginTop="5dp"
                        style="@style/settingstextfont"/>

                    <EditText
                        android:id="@+id/id_modify_confirmvippassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:inputType="textPassword"
                        android:digits="@string/page"
                        android:maxLength="12"
                        style="@style/settingstextfont"/>

                </LinearLayout>

                <Button
                    android:id="@+id/id_modify_vipsave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:text="保存"/>
            </LinearLayout>



        </LinearLayout>




    </ScrollView>

</RelativeLayout>